@model List<AppUser>

@if (Model?.Any() == true)
{
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">List of Users</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle text-center">@item.Id</td>
                                <td class="align-middle">@item.UserName</td>
                                <td class="align-middle">@item.Email</td>
                                <td class="align-middle">@item.PasswordHash</td>
                                <td class="align-middle text-center">
                                    <a class="btn-sm btn-outline-secondary" asp-controller="Contact" asp-action="Detail" asp-route-id="@item.Id"><i class="far fa-address-card"></i></a>
                                    <a class="btn-sm btn-outline-primary" asp-controller="Contact" asp-action="Update" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                                    <a class="btn-sm btn-outline-danger" asp-controller="Contact" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <strong>Notice!</strong> There is no any recored in DB.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}