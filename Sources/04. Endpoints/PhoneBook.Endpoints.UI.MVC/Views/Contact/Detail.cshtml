@model PhoneBook.Endpoints.UI.MVC.Models.Contacts.ContactDetailsViewModel

@{
    var imgSrc = String.Format("data:image/gif;base64,{0}", Model.Image);
    var fullName = Model.FirstName + " " + Model.LastName;
}

<div class="d-flex bd-highlight border">
    <div class="p-2 bd-highlight border">
        <img class="rounded" src="@imgSrc" height="150" width="150" class="img-thumbnail" alt="@fullName" />
    </div>
    <div class="p-2 flex-grow-1 bd-highlight border">
        <div>
            <b><label asp-for="FirstName"></label> : </b> @Model.FirstName
        </div>
        <div>
            <b><label asp-for="LastName"></label> : </b> @Model.LastName
        </div>
        <div>
            <b><label asp-for="Email"></label> : </b> @Model.Email
        </div>
        <div>
            <b><label asp-for="Address"></label> : </b> @Model.Address
        </div>

    </div>
    <div class="p-2 bd-highlight border">
        <div>
            <a class="btn-sm btn-outline-primary" asp-controller="Contact" asp-action="Update" asp-route-id="@Model.ContactId"><i class="fa fa-edit"></i></a>
            <a class="btn-sm btn-outline-danger" asp-controller="Contact" asp-action="Delete" asp-route-id="@Model.ContactId"><i class="fa fa-trash"></i></a>
        </div>
    </div>
</div>

