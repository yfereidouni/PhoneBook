@model List<PhoneBook.Core.Entities.Contacts.Contact>

@if (Model != null && Model.Count > 0)
{
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">List of Contacts</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Photo</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    @*<tfoot>
                        <tr>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Office</th>
                        <th>Age</th>
                        <th>Start date</th>
                        <th>Salary</th>
                        </tr>
                        </tfoot>
                    *@
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @{
                                    var imgSrc = String.Format("data:image/gif;base64,{0}", item.Image);
                                    var fullName = item.FirstName + " " + item.LastName;
                                }
                                <td class="align-middle text-center">
                                    <img src="@imgSrc" height="75" width="75" class="img-thumbnail rounded-circle" alt="@fullName" />
                                </td>
                                <td class="align-middle">@item.FirstName</td>
                                <td class="align-middle">@item.LastName</td>
                                <td class="align-middle">@item.Email</td>
                                <td class="align-middle">@item.Address</td>
                                <td class="align-middle text-center">
                                    @*  <a asp-controller="Contact" asp-action="Detail" asp-route-id="@item.Id" class="badge badge-group-sm badge-primary">Detail</a>
                                        <a asp-controller="Contact" asp-action="Update" asp-route-id="@item.Id" class="badge badge-group-sm badge-warning">Edit</a>
                                        <a asp-controller="Contact" asp-action="Delete" asp-route-id="@item.Id" class="badge badge-group-sm badge-danger">Delete</a>
                                    *@
                                    <a class="btn-sm btn-outline-secondary" asp-controller="Contact" asp-action="Detail" asp-route-id="@item.Id"><i class="far fa-address-card"></i></a>
                                    <a class="btn-sm btn-outline-primary" asp-controller="Contact" asp-action="Update" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                                    <a class="btn-sm btn-outline-danger" asp-controller="Contact" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>

}
else
{
    @*<div class="alert alert-info" role="alert">
        There is no any recored in DB.
        </div>*@

    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <strong>Notice!</strong> There is no any recored in DB.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


@section scripts
{
<script>
    $(document).ready(function () {
        $(".collapse-item").click(function() {
            $(this).addClass("active");
            
        });
        
        if (!$("#collapseContacts").hasClass("show")) {
            $("#collapseContacts").addClass("show");   
        }

    });
</script>
}